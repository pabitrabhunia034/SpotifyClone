@using Spotify.Models
@using System.Data
@model Spotify.Models.MyAppDB
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-6">
            <h3>Top 10 Songs</h3>
        </div>
        <div class="col-lg-6 text-right">
            <a href="@Url.Action("About", null, new { Controller = "Home" }, Request.Url.Scheme)"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add Songs</a>
        </div>
    </div>
    <div class="row mt-4">
        <table class="table table-striped">
            <thead class="thead-dark">
            <th>Artists</th>
            <th>Date Of Birh</th>
            <th>Songs</th>

            </thead>
            <tbody>
                @if (Model.dtOnly != null)
                {
                    for (int i = 0; i < Model.dtOnly.Rows.Count; i++)
                    {
                <tr>
                    <td>@Model.dtOnly.Rows[i]["ARTNM"].ToString()</td>
                    <td>@Model.dtOnly.Rows[i]["DOB"].ToString()</td>
                    <td>@Model.dtOnly.Rows[i]["BIO"].ToString()</td>
                </tr>
                    }
                }
                

            </tbody>
        </table>
    </div>

</div>
