<div id="s" class="row pt-5">
    <div class="col-lg-6 offset-lg-3 my-5 border p-5">
        <h1 class="text-center">Login</h1>

        <form id="frm" class="mt-5" action="@Url.Action("signIn",null,new { Controller="Home"}, Request.Url.Scheme)" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label for="userName" class="col-sm-3 col-form-label">USER NAME</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="userName" name="userName" placeholder="Enter User Name...">
                </div>
            </div>
            <div class="form-group row">
                <label for="password" class="col-sm-3 col-form-label">PASSWORD</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="password" name="pass" placeholder="Enter Password...">
                </div>
            </div>
            <div class="row">
                <div class="col text-center mt-3">
                    <button type="button" id="login" class="btn btn-primary">LOGIN</button>
                    <button type="reset" class="btn btn-warning mx-3">REFRESH</button>

                    <a href="@Url.Action("Registration", null, new { Controller = "Home" }, Request.Url.Scheme)">Don't have an account</a>
                </div>
            </div>
        </form>

    </div>
</div>
